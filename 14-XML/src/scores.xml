<!-- 外部DTD -->
<!DOCTYPE scores SYSTEM "scores.dtd">
<!--
	+: 表示出现 1 次或多次, 至少一次
	?: 表示出现 0 次或 1 次
	*: 表示出现任意次
-->
<scores>
	<student id="1">
		<name>a</name>
		<course>b</course>
		<score>100</score>
	</student>
	<student id="2">
		<name>c</name>
		<course>d</course>
		<score>50</score>
	</student>
</scores>